@model TarefaViewModel
<div class="row">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">TiTulo</th>
                    <th scope="col">Data</th>
                    <th scope="col">Completo?</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tarefa in Model.Tarefas)
                {
                    <tr>
                        <th scope="row">@tarefa.Id</th>
                        <td>@tarefa.Titulo</td>
                        <td>@tarefa.Data</td>
                        <td>@tarefa.Completo</td>
                        <td>
                            <a href="" class="btn btn-sm btn-success">Completar</a>
                            <a href="" class="btn btn-sm btn-warning">Editar</a>
                            <a 
                                asp-controller="Tarefa"
                                asp-action="Delete"
                                asp-route-id="@tarefa.Id"
                                class="btn btn-sm btn-danger"
                            >
                            Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col">
        <a href="" class="btn btn-primary">Nova Tarefa</a>
    </div>
</div>